<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#848484">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="#2E2E2E"
        app:cardBackgroundColor="#2E2E2E">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/horac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="12:00"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp"
                android:showDividers="middle|beginning|end">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:text="S02: "
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/news02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff"
                    android:textDirection="rtl"
                    android:textSize="25sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FREQ. CARD: "
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/newfreq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff"
                    android:textDirection="rtl"
                    android:textSize="25sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/ddd2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="PRESION ART: "
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/newpres1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff"
                    android:textDirection="rtl"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#ffff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/newpres2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff"
                    android:textSize="25sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/tempsss2"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:text="TEMPERATURA: "
                    android:textColor="#ffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/newtem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff"
                    android:textDirection="rtl"
                    android:textSize="25sp" />

            </TableRow>

        </TableLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>